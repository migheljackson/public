<!--
@name RequestPasswordResetMessage
@description Page for messages from Password Reset (The username or email address is not associated with an account)
-->

<section class="step" data-step-title="step-recover-password-5">
<div class="sign-up-page">
    <div class="row">
        <div class="small-12 large-centered large-9 columns">
            <h2 class="text-center">Forgot password</h2>

            <hr>
            <h4 class="text-center">[[+main_message]]</h4>
            <div class="small-12 large-centered large-6 columns">
            
            <div class="row">
            <div class="small-12 columns">
                <a href="[[+link_url]]" type="submit" class="button small expand radius next-step">[[+link_message]]</a>
            </div>
            </div>
            
            </div>
        </div>
    </div>
</div>
</section>
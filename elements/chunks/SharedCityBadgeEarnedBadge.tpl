<div class="content [[+active]]" id="panel[[+index]]">
  <div class="panel clearfix small-12 columns">
    <div class="small-12 columns">
      <div class="row">
        <h5 class="left large-8"><strong>[[+badge_name]]</strong></h5>
        <!--<a href="" class="large-4 right text-right">Learn how to earn this badge</a>-->
        <hr>
      </div>
      <div class="row">
        <div class="large-3 left end">
          <img src="[[+badge_details.image_url]]" alt="[[+badge.name]]" style="max-width:200px;max-height:200px;">
        </div>
        <div class="large-9 columns">
          <p>Badge earned: [[+earned_on]]</p>
          <p>[[+badge_details.description]]</p>
          <div class="large-3 left end">
            [[+submission_links]]
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
